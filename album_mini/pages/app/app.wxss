page {
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
}

.applist {
    margin-top: 150rpx;
}

.index-title {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    text-align: center;
    line-height: 200rpx;
    font-size: 35rpx;
    font-weight: bold;
    letter-spacing: 5rpx;
    background-color: #fff;
    z-index: 1005;
}

.llads {
    margin-top: 5rpx;
    margin-bottom: 15rpx;
    width: 720rpx;
    height: 100%;
    overflow: hidden;
}

.appimg {
    width: 130rpx;
    height: 130rpx;
    border-radius: 100%;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.appbox {
    display: flex;
    flex-direction: row;
    width: 720rpx;
    height: 150rpx;
    background-color: #FFF;
    box-shadow: 0 0 20rpx 0 #e0e0e0;
    border-radius: 5rpx;
    margin-bottom: 20rpx;
}

.apptext {
    display: flex;
    flex-direction: column;
    width: 370rpx;
    margin-left: 40rpx;
    text-align: left;
}

.t1 {
    width: 370rpx;
    overflow: hidden;
    font-size: 35rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 25rpx;
    margin-bottom: 20rpx;
}

.t2 {
    font-size: 22rpx;
    color: #9a9a9a;
}

.goto {
    color: #000;
    background-color: #ffa099;
    width: 150rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    border-radius: 10rpx;
    text-align: center;
    margin-top: 35rpx;
}