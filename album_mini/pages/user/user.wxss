page {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.lladsbox {
    width: 720rpx;
    margin-bottom: 20rpx;
}

.index-title {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    text-align: center;
    line-height: 200rpx;
    font-size: 35rpx;
    font-weight: bold;
    letter-spacing: 5rpx;
    background-color: #fff;
    z-index: 1005;
}

.avatarbox {
    margin-top: 150rpx;
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    position: relative;
}

.avbox {
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    z-index: 999;
}

.avatar4 {
    width: 130rpx;
    height: 130rpx;
    margin-left: 40rpx;
    margin-top: 50rpx;
    border-radius: 100%;
}

.avatar3 {
    width: 170rpx;
    height: 170rpx;
    margin-left: 8rpx;
    margin-top: 15rpx;
    border-radius: 100%;
}

.avatar2 {
    width: 170rpx;
    height: 170rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
    border-radius: 100%;
}

.avatar1 {
    width: 170rpx;
    height: 170rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
    border-radius: 100%;
}

.nickname {
    font-size: 35rpx;
    font-weight: bold;
    letter-spacing: 3rpx;
    margin-top: 5rpx;
}

.navbox {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 80rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
    box-shadow: 0 10rpx 20rpx #eaedf3;
    line-height: 80rpx;
    align-items: center;
    justify-content: center;
}

.active {
    color: #e96161;
    font-weight: bold;
    border-bottom: 5rpx solid #e96161;
}

.tabbox {
    text-align: center;
    width: 350rpx;
}

.albumlistbox {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
    margin-top: 30rpx;
}

.thumb {
    width: 720rpx;
    height: 400rpx;
    position: relative;
}

.imgs {
    width: 100%;
    height: 100%;
}

.listbox {
    width: 720rpx;
    height: 500rpx;
    overflow: hidden;
    border-radius: 15rpx;
    box-shadow: 0 10rpx 20rpx #eaedf3;
    margin-bottom: 30rpx;
}

.playimg {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 180rpx;
    left: 300rpx;
}

.delalbum {
    width: 60rpx;
    height: 60rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.btns-al {
    border: 1rpx solid #fff;
    text-align: center;
    line-height: 46rpx;
    width: 100rpx;
    height: 46rpx;
    letter-spacing: 2rpx;
    box-shadow: 0 0 15rpx #525252;
    font-size: 25rpx;
    color: #fff;
    border-radius: 46rpx;
    margin-top: 10rpx;
    margin-left: 400rpx;
}

.btns-share {
    width: 100rpx;
    height: 50rpx;
    border-radius: 50rpx;
    text-align: center;
    line-height: 50rpx;
    color: #fff;
    background-color: #0fb617;
    margin-top: 10rpx;
    margin-left: 40rpx;
    font-size: 25rpx;
    box-shadow: 0 0 15rpx #525252;
}

.toolbox {
    width: 720rpx;
    height: 70rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    background: -webkit-linear-gradient(rgba(32,27,27,0.9),rgba(255,255,255,0));
}

.title {
    width: 720rpx;
    height: 60rpx;
    font-size: 35rpx;
    overflow: hidden;
    line-height: 60rpx;
    position: absolute;
    letter-spacing: 3rpx;
    top: 340rpx;
    left: 0rpx;
    text-align: center;
    color: #fff;
    background: -webkit-linear-gradient(rgba(255,255,255,0),rgba(48,48,48,0.6));
    white-space: nowrap;
    text-overflow: ellipsis;
}

.footerbox {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 720rpx;
    font-size: 32rpx;
}

.hotbox {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    width: 200rpx;
}

.itemimgs {
    width: 40rpx;
    height: 40rpx;
}

.itemimg {
    width: 50rpx;
    height: 50rpx;
}

.hottxt {
    margin-left: 10rpx;
}

.suo {
    width: 48rpx;
    height: 48rpx;
}

.suo1 {
    width: 68rpx;
    height: 48rpx;
}

.nicknamebox {
    width: 250rpx;
    height: 48rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.loadingbox {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #a7a7a7;
    text-align: center;
}

.loginbox {
    position: absolute;
    top: 400rpx;
    left: 55rpx;
    width: 650rpx;
    height: 400rpx;
    box-shadow: 0 0 30rpx #a1a1a1;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.login {
    margin-top: 50rpx;
    width: 300rpx;
    height: 80rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
    letter-spacing: 5rpx;
    background: -webkit-linear-gradient(#0bc266,#058545);
    border-radius: 80rpx;
    color: #fff;
    box-shadow: 0 0 35rpx #a7a7a7;
}

.textbox {
    font-size: 30rpx;
    margin-bottom: 15rpx;
}